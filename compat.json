{
  "compatibility-mode": true,
  "constants": {
    "@main-font": [ "noto-mix", "noto-cjk" ],
    "@devil": [ "smiley", 54, 49, 30, 30 ],
    "@sleepy": [ "smiley", 154, 94, 30, 30 ]
  },
  "fonts": {
    "noto-mix": "//cdn.melown.com/libs/vtsjs/fonts/noto-extended/1.0.0/noto.fnt",
    "noto-cjk": "//cdn.melown.com/libs/vtsjs/fonts/noto-cjk/1.0.0/noto.fnt",
    "#default": "//cdn.melown.com/libs/vtsjs/fonts/noto-basic/1.0.0/noto.fnt"
  },
  "bitmaps": {
    "smiley": "smiley.jpeg"
  },
  "layers": {
    "roads-flat": {
      "filter": [
        "all",
        [ "==", "#group", "transportation" ],
        [ "in", "$class", "secondary" ]
      ],
      "line": true,
      "line-flat": true,
      "line-width": 100,
      "line-color": [ 255, 0, 0, 120 ],
      "zbuffer-offset": [ -0.2, 0, 0 ],
      "z-index": 1,
      "culling": 89
    },
    "roads-screen": {
      "filter": [
        "all",
        [ "==", "#group", "transportation" ],
        [ "in", "$class", "tertiary" ]
      ],
      "line": true,
      "line-flat": false,
      "line-width": 10,
      "line-color": [ 0, 0, 255, 120 ],
      "zbuffer-offset": [ -0.2, 0, 0 ],
      "z-index": 3,
      "culling": 89
    },
    "towns-flat": {
      "filter": [
        "all",
        [ "==", "#group", "place" ],
        [ "==", "$class", "town" ]
      ],
      "point": true,
      "point-flat":  true,
      "point-radius": 200,
      "point-color": [ 255, 120, 0, 120 ],
      "zbuffer-offset": [ -0.2, 0, 0 ],
      "z-index": 2,
      "culling": 89
    },
    "towns-screen": {
      "filter": [
        "all",
        [ "==", "#group", "mountain_peak" ]
      ],
      "point": true,
      "point-flat": false,
      "point-radius": 30,
      "point-color": [ 0, 120, 255, 120 ],
      "zbuffer-offset": [ -0.2, 0, 0 ],
      "z-index": 4,
      "culling": 89
    }
  }
}
