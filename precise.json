{
  "compatibility-mode" : false,
  "constants": {
    "@main-font": [ "noto-mix", "noto-cjk" ],
    "@devil": [ "smiley", 54, 49, 30, 30 ],
    "@sleepy": [ "smiley", 154, 94, 30, 30 ]
  },
  "fonts": {
    "noto-mix": "//cdn.melown.com/libs/vtsjs/fonts/noto-extended/1.0.0/noto.fnt",
    "noto-cjk": "//cdn.melown.com/libs/vtsjs/fonts/noto-cjk/1.0.0/noto.fnt",
    "#default": "//cdn.melown.com/libs/vtsjs/fonts/noto-basic/1.0.0/noto.fnt"
  },
  "bitmaps": {
    "smiley": "smiley.jpeg"
  },
  "layers": {
    "state-boundaries": {
      "filter": [
        "all",
        [ "==", "#group", "boundary" ],
        [ "!=", "$maritime", "1" ]
      ],
      "__line": true,
      "line-flat": false,
      "line-width": { "div": [ 50, "$admin_level" ] }, "_unit": "pixels here",
      "line-color": [ 248, 222, 126, 128 ],
      "zbuffer-offset": [ -0.2, 0, 0 ],
      "culling": 89
    },
    "roads": {
      "filter": [
        "all",
        [ "==", "#group", "transportation" ],
        [ "in", "$class", "secondary", "tertiary" ]
      ],
      "__line": true,
      "line-flat": true,
      "line-width": 20, "_unit": "meters here",
      "line-color": [ 255, 0, 255, 120 ],
      "zbuffer-offset": [ -0.2, 0, 0 ],
      "culling": 89
    },
    "city-labels": {
      "filter": [
        "all",
        [ "==", "#group", "place" ],
        [ "==", "$class", "city" ]
      ],
      "pack": true,
      "label": true,
      "label-stick": [ 30, 0, 10, 255, 255, 255, 128 ],
      "__label-size": { "if": [ [ "<", { "sin": { "strlen": "$name" } }, 0 ], 20, 10 ] },
      "label-size": 20,
      "label-font": "@main-font",
      "label-source": "$name",
      "label-offset": [ -20, 0 ],
      "label-origin": "bottom-left",
      "label-no-overlap-margin": [ 0, 0 ],
      "icon": true,
      "icon-source": "@devil",
      "icon-origin": "bottom-right",
      "icon-offset": [ -20, 0 ],
      "icon-scale": 0.5,
      "zbuffer-offset": [ -0.15, 0, 0 ],
      "z-index": 1,
      "culling": 89
    },
    "peaks": {
      "filter": [
        "all",
        [ "==", "#group", "mountain_peak" ]
      ],
      "__icon": true,
      "icon-source": "@sleepy",
      "icon-origin": "bottom-center",
      "__icon-scale": { "mul": [ { "strlen": "$name" }, 0.04 ] },
      "icon-scale": 1,
      "zbuffer-offset": [ -0.15, 0, 0 ],
      "z-index": 1
    }
  }
}
